<body>

    <h1>Bem-vindo ao meu site!</h1>
    <p>Este é um conteúdo de exemplo.</p>

    <div id="lgpd-banner" style="display: none;"> <div class="lgpd-content">
            <p>Utilizamos cookies para personalizar conteúdo e análises. Ao continuar, você concorda com nossa <a href="/politica-privacidade">Política de Privacidade</a>.</p>
            <div class="lgpd-buttons">
                <button onclick="acceptCookies()" class="btn">Aceitar Todos</button>
                <button onclick="managePreferences()" class="btn">Personalizar</button>
            </div>
        </div>
        <div id="cookie-preferences" class="cookie-settings" style="display:none;">
            <h3>Preferências de Cookies</h3>
            <p>Selecione os tipos de cookies que você aceita:</p>
            <label>
                <input type="checkbox" id="analytics-cookies" checked> Cookies de Desempenho
            </label>
            <br>
            <label>
                <input type="checkbox" id="marketing-cookies"> Cookies de Marketing
            </label>
            <br><br>
            <button onclick="savePreferences()" class="btn">Salvar Preferências</button>
        </div>
    </div>

    <div id="gtm-noscript-container"></div>


    <script>
        // Objeto para guardar as configurações de consentimento
        const cookieConsent = {
            analytics: false,
            marketing: false
        };

        // Função para carregar um script dinamicamente na página
        function loadScript(src, isAsync = true) {
            const script = document.createElement('script');
            script.src = src;
            script.async = isAsync;
            document.head.appendChild(script);
            console.log(`Script ${src} carregado.`);
        }
        
        // Função para carregar o Google Tag Manager
        function initializeGTM(gtmId) {
            // Adiciona o GTM (noscript) ao corpo do HTML
            const noscriptContainer = document.getElementById('gtm-noscript-container');
            noscriptContainer.innerHTML = `<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=${gtmId}" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>`;
            
            // Script principal do GTM
            (function(w,d,s,l,i){
                w[l]=w[l]||[];w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});
                var f=d.getElementsByTagName(s)[0],
                j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer', gtmId);
            console.log(`GTM (${gtmId}) inicializado.`);
        }

        // Função principal que dispara os scripts com base no consentimento
        function initializeTracking(consent) {
            const gtmId = 'GTM-XXXXXX'; // SUBSTITUA PELO SEU ID

            // Se o consentimento para analytics (desempenho) for dado, carrega o GTM
            if (consent.analytics) {
                initializeGTM(gtmId);
            }
            
            // Se o consentimento para marketing for dado, carrega os scripts de marketing
            // Idealmente, esses scripts devem ser gerenciados DENTRO do GTM com base em eventos de consentimento.
            // Mas para um exemplo didático, podemos carregá-los aqui.
            if (consent.marketing) {
                loadScript('https://example.com/facebook-pixel.js');
                loadScript('https://example.com/linkedin-insight.js');
            }
        }
        
        // Funções de controle do banner

        function hideBanner() {
            document.getElementById('lgpd-banner').style.display = 'none';
        }

        function acceptCookies() {
            cookieConsent.analytics = true;
            cookieConsent.marketing = true;
            localStorage.setItem('cookieConsent', JSON.stringify(cookieConsent));
            hideBanner();
            initializeTracking(cookieConsent);
        }

        function managePreferences() {
            document.getElementById('cookie-preferences').style.display = 'block';
        }

        function savePreferences() {
            const analyticsAllowed = document.getElementById('analytics-cookies').checked;
            const marketingAllowed = document.getElementById('marketing-cookies').checked;

            cookieConsent.analytics = analyticsAllowed;
            cookieConsent.marketing = marketingAllowed;

            localStorage.setItem('cookieConsent', JSON.stringify(cookieConsent));
            hideBanner();
            initializeTracking(cookieConsent);
        }

        // Função que roda quando a página é carregada
        window.onload = function() {
            const savedConsent = localStorage.getItem('cookieConsent');
            
            if (savedConsent) {
                // Se já temos um consentimento salvo, inicializamos o rastreamento
                const consent = JSON.parse(savedConsent);
                initializeTracking(consent);
            } else {
                // Se não, exibimos o banner
                document.getElementById('lgpd-banner').style.display = 'block';
            }
        };

    </script>
</body>
</html>
